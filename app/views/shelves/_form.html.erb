
<%= simple_form_for(@shelf) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :mac_address %>
    <%= f.input :mac_weight %>
    <%= f.input :comment %>
    <%= f.input :company_id %>
    <%= f.input :product_id %>
    <%= f.input :last_shelf_stat %>
    <%= f.input :refill_shelf_stat %>
    <%= f.input :grap_shelf_stat %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
