
<%= simple_form_for(@shelf_stat) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :weight %>
    <%= f.input :weight_percent %>
    <%= f.input :product_count %>
    <%= f.input :product_count_real %>
    <%= f.input :temperature_violation %>
    <%= f.input :timedelta %>
    <%= f.input :weight_increment %>
    <%= f.input :weight_decrement %>
    <%= f.input :shelf_id %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
